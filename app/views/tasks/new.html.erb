<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-offset-3 col-md-6 central">
      <h1>Create task</h1>
      <%= bootstrap_form_for [@team, @task] do |f| %>
        <%= f.text_field :name %>
        <%= f.text_area :description %>
        <%= f.submit "Add task" %>
      <% end %>
    </div>
  </div>
</div>
